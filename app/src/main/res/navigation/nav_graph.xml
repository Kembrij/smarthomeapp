<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/nav_graph"
    app:startDestination="@id/login_fragment">

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.kembrij.smarthomeapp.ui.login_screen.LoginFragment"
        android:label="Login"
        tools:layout="@layout/login_fragment">

        <argument
            android:name="username"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="password"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/action_login_fragment_to_home_fragment"
            app:destination="@id/home_fragment"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_login_fragment_to_registration_fragment"
            app:destination="@id/registration_fragment"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registration_fragment"
        android:name="com.kembrij.smarthomeapp.ui.registration_screen.RegistrationFragment"
        android:label="Registration"
        tools:layout="@layout/registration_fragment">

        <argument
            android:name="username"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="password"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/action_registration_fragment_to_login_fragment"
            app:destination="@id/login_fragment"
            app:popUpTo="@id/registration_fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registration_fragment_to_home_fragment"
            app:destination="@id/home_fragment"
            app:popUpTo="@id/registration_fragment"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/home_fragment"
        android:name="com.kembrij.smarthomeapp.ui.home_screen.HomeFragment"
        android:label="Home"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/action_map_fragment_to_login_fragment"
            app:destination="@id/login_fragment" />
        <action
            android:id="@+id/action_home_fragment_to_scripts_fragment"
            app:destination="@id/script_fragment" />
        <action
            android:id="@+id/action_home_fragment_to_statistics_fragment"
            app:destination="@id/statistics_fragment" />
        <action
            android:id="@+id/action_home_fragment_to_logs_fragment"
            app:destination="@id/logs_fragment" />
    </fragment>

    <fragment
        android:id="@+id/script_fragment"
        android:name="com.kembrij.smarthomeapp.ui.script_screen.ScriptFragment"
        android:label="Scripts"
        tools:layout="@layout/script_fragment">

    </fragment>
    <fragment
        android:id="@+id/statistics_fragment"
        android:name="com.kembrij.smarthomeapp.ui.statistics_screen.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/statistics_fragment">

    </fragment>
    <fragment
        android:id="@+id/logs_fragment"
        android:name="com.kembrij.smarthomeapp.ui.log_screen.LogFragment"
        android:label="Logs"
        tools:layout="@layout/log_fragment">

    </fragment>


</navigation>